<Window x:Class="TCP_Terminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCP_Terminal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <TextBox x:Name="boxIP" HorizontalAlignment="Left" Height="25" Margin="75,50,0,0" TextWrapping="Wrap" Text="IP-Adress" VerticalAlignment="Top" Width="150" TextChanged="TextBox_TextChanged" TextAlignment="Center"/>
        <CheckBox x:Name="cbkServer" Content="Server" HorizontalAlignment="Left" Margin="75,100,0,0" VerticalAlignment="Top" Checked="cbkServer_Checked"/>
        <CheckBox x:Name="cbkClient" Content="Client" HorizontalAlignment="Left" Margin="175,100,0,0" VerticalAlignment="Top" Checked="cbkClient_Checked"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="75,150,0,0" VerticalAlignment="Top" Width="150" Height="40" Click="btnConnect_Click"/>
        <TextBlock x:Name="txtInfo" HorizontalAlignment="Left" Margin="128,248,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
